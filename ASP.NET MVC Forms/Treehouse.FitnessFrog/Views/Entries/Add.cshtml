<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Date, "Date", new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Date, "{0:d}", new { @class = "form-control" })
                @* @Html.Label("Date", "Date", new { @class =  "control-label" }) *@
                @* @Html.TextBox("Date", null, new { @class = "form-control" }) *@
                @* <label for="Date" class="control-label">Date</label>
                <input type="text" id="Date" name="Date" class="form-control" value="@ViewBag.Date" /> *@
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ActivityId, "Activity", new { @class = "control-label" })
                @Html.DropDownListFor(m => m.ActivityId, ViewBag.ActivitiesSelectListItems as SelectList, "", new { @class = "form-control" })
                @* @Html.Label("ActivityId", "Activity", new { @class = "control-label" })
